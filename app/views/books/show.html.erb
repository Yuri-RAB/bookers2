<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/user_info', book_user: @book_user, newbook: @newbook, user: @book_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_user.id) do %>
                <%= image_tag @book_user.get_profile_image, size: "100x100" %>
                <br />
                <%= @book_user.name %>
              <% end %>
            </td>

            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title%>
              <% end %>
            </td>

            <td><%= @book.body %></td>

            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
            </td>

            <td>
              <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
            <% else %>

            <td></td>
            <td></td>

            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>