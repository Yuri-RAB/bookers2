<% if model.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(model.id), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= model.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(model.id), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: blue;"></i>
    <%= model.favorites.count %>
  <% end %>
<% end %>